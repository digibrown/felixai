---
const links = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/work', label: 'Work' },
  { href: '/contact', label: 'Contact' }
];
---

<a class="skip-link" href="#main">Skip to content</a>
<nav class="navbar" role="navigation" aria-label="Primary">
  <div class="nav-inner">
    <a class="brand" href="/">
      <img src="/images/felix-logo-500.png" alt="Felix.AI" width="32" height="32" />
      <span class="brand-text">Felix.AI</span>
    </a>

    <button class="menu-toggle" aria-expanded="false" aria-controls="nav-menu" aria-label="Toggle menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>

    <ul id="nav-menu" class="menu">
      {links.map((l) => (
        <li><a href={l.href}>{l.label}</a></li>
      ))}
    </ul>
  </div>
</nav>

<script>
  const btn = document.querySelector('.menu-toggle');
  const menu = document.getElementById('nav-menu');
  if (btn && menu) {
    btn.addEventListener('click', () => {
      const open = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!open));
      menu.classList.toggle('open', !open);
    });
  }
</script>

<style>
  .skip-link {
    position: absolute;
    left: -9999px;
  }
  .skip-link:focus {
    left: 0;
    top: 0;
    background: #000;
    color: #fff;
    padding: 0.5rem 1rem;
    z-index: 1000;
  }

  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    height: var(--nav-h, 56px);
    background: rgba(0,0,0,0.7);
    color: #fff;
    backdrop-filter: saturate(120%) blur(6px);
    border-bottom: 1px solid rgba(255,255,255,0.12);
  }
  .nav-inner {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0 1rem;
    height: 100%;
  }
  .brand { display: inline-flex; align-items: center; gap: 0.5rem; text-decoration: none; color: inherit; }
  .brand-text { font-weight: 600; color: inherit; }

  .menu-toggle {
    display: inline-flex;
    flex-direction: column;
    gap: 4px;
    background: transparent;
    border: 0;
    padding: 0.5rem;
    cursor: pointer;
  }
  .menu-toggle .bar { width: 22px; height: 2px; background: currentColor; display: block; }

  .menu {
    list-style: none;
    margin: 0;
    padding: 0;
    display: none;
    position: absolute;
    right: 0.5rem;
    top: var(--nav-h, 56px);
    background: rgba(0,0,0,0.85);
    backdrop-filter: inherit;
    border: 1px solid rgba(255,255,255,0.12);
    border-radius: 10px;
    overflow: hidden;
  }
  .menu.open { display: block; }
  .menu li a {
    display: block;
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: #fff;
    white-space: nowrap;
  }
  .menu li a:hover { background: rgba(255,255,255,0.08); }

  /* Desktop */
  @media (min-width: 900px) {
    .menu { position: static; display: flex; gap: 0.5rem; border: 0; background: transparent; }
    .menu li a { padding: 0.5rem 0.75rem; border-radius: 8px; }
    .menu li a:hover { background: rgba(255,255,255,0.12); }
    .menu-toggle { display: none; }
  }
</style>
