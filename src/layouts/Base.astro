---
const { title = 'Felix.AI' } = Astro.props as { title?: string };
import Nav from '../components/Nav.astro';
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/images/felix-logo-500.png" />
  </head>
  <body>
    <Nav />
    <main id="main">
      <slot />
    </main>
  </body>
  <style is:global>
    :root { color-scheme: light dark; --nav-h: 56px; }
    html, body { margin: 0; padding: 0; font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; }
    main { padding-top: var(--nav-h); }
    a { color: inherit; }
  </style>
</html>
